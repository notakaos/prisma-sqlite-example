{
  // IntelliSense を使用して利用可能な属性を学べます。
  // 既存の属性の説明をホバーして表示します。
  // 詳細情報は次を確認してください: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "runtimeVersion": "15.10.0",
      "request": "launch",
      "name": "Launch Program",
      "preLaunchTask": "Compile TypeScript",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${file}",
      "outFiles": [
        "${workspaceFolder}/dist/*.js"
      ],
      // ref. https://gist.github.com/cecilemuller/2963155d0f249c1544289b78a1cdd695
      "runtimeExecutable": "node",
      "runtimeArgs": ["--nolazy"],
      "cwd": "${workspaceRoot}",
      "internalConsoleOptions": "openOnSessionStart",
      "sourceMaps": true,
      "smartStep": true,
    }
  ]
}